{{>layouts/header}}

<div class="container-fluid px-5 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        
        <div class="fs-2 fw-bold text-center flex-grow-1">MyTodos</div>
        <a href="/mypage" class="rounded-circle border p-2 d-flex align-items-center justify-content-center bg-light" style="width:38px;height:38px;">
            <i class="bi bi-person" style="font-size:1.5rem;"></i>
        </a>
    </div>

    <div class="row g-4">
        <!-- 오늘 할 일 -->
        <div class="col-md-5">
            <div class="bg-light rounded-4 p-4 position-relative shadow-sm" style="min-height:340px;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="fw-bold mb-0">오늘 할 일</h5>
                    <span class="fs-5">{{doneCount}}/{{totalCount}}</span>
                    <button class="btn btn-sm btn-outline-secondary ms-2 rounded-circle" style="width:32px;height:32px;" data-bs-toggle="modal" data-bs-target="#addTodoModal">+</button>
                </div>
                <ul class="list-unstyled mt-3">
                    {{#todos}}
                        <li class="d-flex align-items-center mb-3">
                            <input class="form-check-input me-3" type="checkbox" {{#completed}}checked{{/completed}} onclick="toggleTodo({{id}})">
                            <span class="fs-5 {{#completed}}text-decoration-line-through text-muted{{/completed}}">{{content}}</span>
                        </li>
                    {{/todos}}
                    {{^todos}}
                        <li class="text-muted">할 일이 없습니다.</li>
                    {{/todos}}
                </ul>
            </div>
        </div>
        <!-- 캘린더 -->
        <div class="col-md-4">
            <div class="bg-white rounded-4 p-4 shadow-sm">
                <div class="text-center fw-bold mb-2">June 2021</div>
                <table class="table table-borderless text-center mb-0">
                    <thead>
                    <tr class="text-muted">
                        <th>Su</th><th>Mo</th><th>Tu</th><th>We</th><th>Th</th><th>Fr</th><th>Sa</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- 캘린더 행은 JS/서버에서 데이터로 동적으로 생성 -->
                    {{#calendarRows}}
                        <tr>
                            {{#days}}
                                <td class="{{#today}}bg-primary text-white rounded-circle{{/today}}">{{day}}</td>
                            {{/days}}
                        </tr>
                    {{/calendarRows}}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- 친구 목록 -->
        <div class="col-md-3">
            <div class="bg-white rounded-4 p-4 shadow-sm">
                <div class="fw-bold mb-3">→ 친구 목록</div>
                {{#friends}}
                    <button class="btn btn-outline-secondary w-100 mb-2">{{name}}</button>
                {{/friends}}
                {{^friends}}
                    <span class="text-muted">친구가 없습니다.</span>
                {{/friends}}
            </div>
        </div>
    </div>
</div>

<!-- Add Todo Modal -->
<div class="modal fade" id="addTodoModal" tabindex="-1" aria-labelledby="addTodoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" action="/todos/create" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="addTodoModalLabel">할 일 추가</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="닫기"></button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" name="content" placeholder="할 일을 입력하세요" required>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">추가</button>
            </div>
        </form>
    </div>
</div>

{{>layouts/footer}}
